{
    "identifier": "{{ identifier }}",
    "name": "{{ name }}",
    "organization": "{{ organization }}",
    "description": "Lorem ipsum, dolor sit amet.",
    "version": "1.0",
    "categories": ["commands"],
    
    "main": "main.js",
    
    "activationEvents": [
        "onLanguage:html"
    ],
    
    "entitlements": {
        {{ entitlements }}
    },
    
    "commands": {
        "extensions": [
            {
                "title": "Open URL",
                "command": "{{ shortName }}.openURL"
            },
            {
                "title": "Run External Tool",
                "command": "{{ shortName }}.runExternalTool"
            }
        ]
    },
    
    "config": [
        {
            "key": "{{ shortName }}.foobar",
            "title": "Foo the bar",
            "type": "boolean",
            "default": false
        }
    ]
}
